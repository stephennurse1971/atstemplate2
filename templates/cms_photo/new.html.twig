{% extends 'base.html.twig' %}

{% block title %}New: CMS- Photo{% endblock %}

{% block body %}
    <h1 style="color: red">New CMS - Photo</h1>

    {{ include('cms_photo/_form.html.twig') }}

    <a class="btn btn-outline-info btn-sm" href="{{ path('cms_photo_index') }}">Return to list</a>
{% endblock %}

{% block additionaljs %}
    <script>
        var category = $("#cms_photo_category").val();
        if (category === 'Static') {
            $(".static-container").show();
            $(".product-container").hide();
        } else {
            $(".static-container").hide();
            $(".product-container").show();
        }
        $("#cms_photo_category").change(function () {
            var category = $(this).val();
            if (category === 'Static') {
                $(".static-container").show();
                $(".product-container").hide();
                $('#cms_photo_product').val('');
            } else {
                $(".static-container").hide();
                $('#cms_photo_staticPageName').val('');
                $(".product-container").show();
            }
        })


        $("[id^='cms_photo_photoOrVideo_']").click(function () {
            $(".rotate-input-field").toggle($(this).val() !== 'Video');
        });

    </script>
{% endblock %}
