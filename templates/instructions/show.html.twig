{% extends 'base.html.twig' %}

{% block title %}
    {{ instruction.topic }}
{% endblock %}


{% block body %}
    <section id="my-service-section" class="default-bg-white">
        <div class="default-space"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="default-title">
                       <h1 style="color: red">{{ instruction.topic }}</h1>
                        <br>
                    </div>
                </div>
            </div>
            {% if instruction.media is null %}
                <div class="row">
                    <div class="col-12">
                        {{ instruction.summary }}
                    </div>
                </div>

            {% else %}
                <div class="row">
                    <div class="col-6">
                        {{ instruction.summary }}
                    </div>
                    <div class="col-6">
                        {{ instruction.media }}
                    </div>
                </div>

            {% endif %}


    </section>


{% endblock %}


