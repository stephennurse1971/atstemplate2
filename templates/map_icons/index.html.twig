{% extends 'base.html.twig' %}

{% block title %}Map Icons{% endblock %}

{% block body %}
    <h1 style="color: red">Map Icons</h1>
    <div class="row">
        <div class="col-3">
            <a class="btn btn-success btn-sm" href="{{ path('map_icons_new') }}">New</a>
        </div>
        <div class="col-6">
            <a class="btn btn-outline-info btn-sm" href="{{ path('business_types_index') }}">Return to Business Types</a>
            <a class="btn btn-outline-info btn-sm" href="{{ path('business_contacts_index') }}">Return to Business Contacts</a>
        </div>
    </div>

    <hr>

    <table class="table table-responsive">
        <thead>
        <tr>
            <th>Name</th>
            <th>FileName</th>
            <th>Icon</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for map_icon in map_icons %}
            <tr>
                <td>{{ map_icon.name }}</td>
                <td>{{ map_icon.iconFile }}</td>
                <td style="text-align: center">
                    {% if map_icon.iconFile is not empty %}
                        {% set file = asset('administration/ATSSharedFiles/BusinessContactsMapIcons/')~map_icon.iconFile %}
{#                        {% set file = asset(business_contacts_map_icon_directory ~ map_icon.iconFile) %}#}
                        <img title="{{ map_icon.iconFile }}" height="20" width="20" src="{{ file }}"
                             class="rounded-circle">
                    {% endif %}
                </td>
                <td>
                    <a class="btn btn-outline-danger btn-sm" href="{{ path('map_icons_edit', {'id': map_icon.id}) }}">Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                'pageLength': 100,
                "order": [[0, 'asc']],
                "paging": false,
                "searching": false,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}
