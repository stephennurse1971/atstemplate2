{% extends 'base.html.twig' %}

{% block title %}Map Icons{% endblock %}

{% block body %}
    <h1 style="color: red">Map Icons</h1>

    <table class="table table-responsive">
        <thead>
        <tr>
            <th>Name</th>
            <th>Icon</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for map_icon in map_icons %}
            <tr>
                <td>{{ map_icon.name }}</td>
                <td style="text-align: center">
                    {% if map_icon.iconFile is not empty %}
                        {% set file = asset('administration/attachments/Business_contacts/Icons/')~map_icon.iconFile %}
                        <img title="{{ map_icon.iconFile }}" height="20" width="20" src="{{ file }}" class="rounded-circle">
                    {% endif %}
                </td>

                <td>
                    <a class="btn btn-outline-danger btn-sm" href="{{ path('map_icons_edit', {'id': map_icon.id}) }}">Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success btn-sm" href="{{ path('map_icons_new') }}">New</a>
{% endblock %}

{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                'pageLength': 100,
                "order": [[0, 'asc']],
                "paging": false,
                "searching": false,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}
