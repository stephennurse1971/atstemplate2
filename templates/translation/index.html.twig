{% extends 'base.html.twig' %}

{% block title %}Translations{% endblock %}

{% block body %}
    <h1 style="color: red">Translations</h1>

    <table class="table table-responsive">
        <thead>
            <tr>
                <th>English</th>
                <th>French</th>
                <th>German</th>
                <th>Spanish</th>
                <th>Russian</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for translation in translations %}
            <tr>
                <td>{{ translation.english }}</td>
                <td>{{ translation.french }}</td>
                <td>{{ translation.german }}</td>
                <td>{{ translation.spanish }}</td>
                <td>{{ translation.russian }}</td>
                <td>
                    <a class="btn btn-outline-danger btn-sm" href="{{ path('translation_edit', {'id': translation.id}) }}">Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success btn-sm" href="{{ path('translation_new') }}">New</a>
{% endblock %}
